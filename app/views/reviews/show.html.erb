<% content_for :meta_title, "#{@name} is on #{DEFAULT_META["meta_product_name"]}" %>

<div class="container">
  <div class="wrapper">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="info">
          <h4 class="show-header"><%= @name %></h4>
          <p class="show-address"><%= @formatted_address %></p>
          <p class="show-paragraph phone-number"> <i class="fas fa-mobile-alt"></i>&nbsp&nbsp <%= @formatted_phone_number %></p>
          <div class="reviews">
            <p class="google-review">
              <i class="fab fa-google"></i> &nbsp
              <% @rating.round.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5-@rating.round).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </p>
            <div id="average">
              <%= render 'average', reviews: @reviews %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 info">
        <h4 class="show-header">Leave a Review</h4>
        <p class="show-subheader">Tell us what you think about <%= @name %></p>
        <% @review = Review.new(place_id: @place_id) %>
        <%= render 'form', review: @review %>
      </div>
    </div>
    <div class="row">
      <h4 class="text-center"> English Reviews</h4>
      <div id="reviews">
        <div class="row" id="row-container">
          <% @reviews.each do |review| %>
              <%= render 'review', review: review %>
          <% end %>
        </div>
      </div>
    </div>
  </div> <!-- close wrapper -->
</div> <!-- close container -->

