                    <%# end %>
                    <%# (5-Review.average(:english_rating).round).times do %>
                    <i class="far fa-flag"></i>
                    <%# end %>
                  </div> -->
                  <!-- </p> -->
                </div>

                <div class="card-footer">
                  <h5><%= candidate["name"] %></h5>
                  <p class="card-address"><%= candidate["formatted_address"] %></p>
                </div>
              </div>

              <%# else  %>
              <%#= render "shared/no" %>
              <%# end %>
              <% end %>
            </div>
            <% end %>
          </div>

          <%= render "shared/map" %>
        </div>
