<div class="main-container">
  <div class="col-xs-12 col-sm-6 col-md-8">
    <% @places.each do |candidate| %>
    <% reviews = Review.where(place_id: candidate['place_id']) %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= link_to review_path(candidate["place_id"]) do %>
      <% if reviews.present?  %>
        <%= render "shared/yes", candidate: candidate, reviews: reviews %>
      <% else  %>
        <%= render "shared/no", candidate: candidate %>
      <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-4 padding">
    <%= render "shared/map" %>
  </div>
</div>
