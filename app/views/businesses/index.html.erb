<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-8">
      <% @businesses.each do |business| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to business_path(business) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= business.photo %>');">
            <div class="card-category"><%= business.name %></div>
              <div class="card-description">
                <p>English Review: <%= Review.average(:english_rating) %></p>
                <p>Service Review: <%= Review.average(:rating) %></p>
              </div>
            </div>
            <% end %>
          </div>
      <% end %>

    </div>

    <div class="col-xs-12 col-sm-6 col-md-4">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
      >
      </div>
    </div>
  </div>
</div>
