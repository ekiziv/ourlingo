<div class="navbar-wagon">
  <div class="search navbar-wagon-item">
    <%= form_tag("/reviews", method: "get", id: "search_place") do %>
      <div class="form-row form-inline navbar-searchbox">
        <%= text_field_tag :input_address,
            params[:input_address],
            class: "form-control",
            placeholder: "Search for a service"%>
        <%= hidden_field_tag :search_lat, '-22.9866074' %>
        <%= hidden_field_tag :search_lng, '-43.2173538'%>
      </div>
    <% end %>
  </div>
  <!-- Logo -->
  <%= link_to root_path do %>
    <h1 class="logo">lingo</h1>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right">
    <% if user_signed_in? %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <p class="navbar-text dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">  <i class="fa fa-user medium-icon face"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <%= current_user.username %></p>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

